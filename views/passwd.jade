extends layout

block content
  div(class="header")
      div(class="pure-menu pure-menu-horizontal")
        a(class="pure-menu-heading pure-menu-link",href="#") EDMS
        ul(class="pure-menu-list")
          li(class="pure-menu-item")
            a(class="pure-menu-link",href="/employees/dashboard") Home
          li(class="pure-menu-item pure-menu-has-children pure-menu-allow-hover")
            a(class="pure-menu-link",href="#") #{user.firstName} #{user.lastName}
            ul(class="pure-menu-children")
              li(class="pure-menu-item")
                a(class="pure-menu-link",href="/employees/view") View Profile
              li(class="pure-menu-item")
                a(class="pure-menu-link",href="/employees/edit") Edit Profile
              li(class="pure-menu-item")
                a(class="pure-menu-link pure-menu-selected",href="/employees/passwd") Change Password
          if admin     
            li(class="pure-menu-item") 
              a(class="pure-menu-link",href="/employees/audit") View Audit
          li(class="pure-menu-item") 
            a(class="pure-menu-link",href="/employees/logout") Log Out
  div(class="content pure-g")
    div(class="pure-u-2-24")
    form(class="pure-form pure-form-aligned pure-u-20-24",action="/employees/passwd",method="post")
      fieldset
        h2 Employee Password Change
        if msg
          div(class="pure-control-group")
            label(for="msg")
            label= msg
        div(class="pure-control-group")
          label(for="userName") User Name
          input(type="text",placeholder="User Name",id="userName",name="userName",value="#{user.userName}",readonly)
        div(class="pure-control-group")
          label(for="opassword") Old Password
          input(type="password",placeholder="Old Password",id="opassword",name="opassword",required)
        div(class="pure-control-group")
          label(for="password") Password
          input(type="password",placeholder="Password",id="password",name="password",required)
        div(class="pure-control-group")
          label(for="cpassword") Confirm Password
          input(type="password",placeholder="Confirm Password",id="cpassword",name="cpassword",required)
        div(class="pure-controls")
          button(type="submit",class="pure-button pure-button-primary") Change Password
          button(type="reset",class="pure-button pure-button-secondary") Reset
    div(class="pure-u-2-24")