extends layout

block content
  div(class="header",style="width:100%")
      div(class="pure-menu pure-menu-horizontal",style="width:100%")
        a(class="pure-menu-heading pure-menu-link",href="#") EDMS
        ul(class="pure-menu-list")
          li(class="pure-menu-item")
            a(class="pure-menu-link",href="/employees/register") Register
  div(class="content pure-g")
    div(class="pure-u-2-24")
    form(class="pure-u-20-24 pure-form pure-form-aligned",action="/employees/login",method="post")
      fieldset
        h2 Employee Login
        if msg
          div(class="pure-control-group")
            label(for="msg")
            label= msg
        div(class="pure-control-group")
          label(for="userName") User Name
          input(type="text",placeholder="User Name",id="userName",name="userName",required)
        div(class="pure-control-group")
          label(for="password") Password
          input(type="password",placeholder="Password",id="password",name="password",required)
        div(class="pure-controls")
          button(type="submit",class="pure-button pure-button-primary") Login
          button(type="reset",class="pure-button pure-button-secondary") Clear
    div(class="pure-u-2-24")